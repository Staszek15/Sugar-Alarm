<resources>
    <!-- Base application theme. -->
    <style name="Theme.PinkTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_button</item>
        <item name="colorPrimaryVariant">@color/pink_button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/pink_background</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/pink_button</item>
    </style>


    <!-- My own Blue theme. -->
    <style name="Theme.BlueTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_button</item>
        <item name="colorPrimaryVariant">@color/navy_button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/navy_button</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/blue_background</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/navy_button</item>
    </style>


    <!-- Overlay to set Action Bar color -->
    <style name="ThemeOverlay.AppCompat.ActionBar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>